@using Microsoft.AspNetCore.Components

@{
    ViewData["Title"] = "Pizzeria";
    Layout = "_CustomLayout";
}

@model List<Pizza>

<section class="main-page">
    @* Start title *@
    <div class="main-page_title mt-3">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-auto">
                    <h1>Casa della Pizza</h1>
                </div>
            </div>
        </div>
    </div>
    @* Fine title *@

    @* Start print pizze *@
    <div class="main-page pizza_viewer mt-3">
        <div class="container">
            
            @if(Model.Count() > 0)
            {
                <div class="row">

                    @foreach (Pizza pizza in Model)
                    {
                        <div class="col-3">
                            <div class="card h-100">
                                <img src="@Url.Content(pizza.FotoUrl)" class="card-img-top" alt="...">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@pizza.Name</h5>
                                    <p class="card-text">@pizza.Description</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="price">@pizza.Price euro</div>
                                        <a href="@Url.Action("PreShow", "Pizzeria", new {id = pizza.PizzaId, pizzaName = pizza.Name} )" class="btn btn-primary">Dettaglio pizza</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            } else
            {
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <h2>Non ci sono risultati</h2>
                    </div>
                </div>
            }
        </div>
    </div>
    @* Fine print pizze *@

</section>