@using Microsoft.AspNetCore.Components

@{
    ViewData["Title"] = "Crea Pizza";
    Layout = "_CustomLayout";
}

@model Pizza

<section class="create-pizza">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-4">
                <form asp-controller="Pizzeria" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">Nome</label>
                        <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Inserisci nome della pizza">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">Descrizione</label>
                        <textarea asp-for="Description" type="text" class="form-control" id="price" placeholder="Inserisci descrizione della pizza"> </textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="form-label">Prezzo</label>
                        <input asp-for="Price" type="number" step="0.01" value="10.00" class="form-control" id="price" placeholder="Inserisci prezzo della pizza">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="FotoUrl" class="form-label">Aggiungi foto della pizza</label>
                        <input asp-for="FotoUrl" class="form-control" type="file" id="formFile">
                    </div>
                    <button type="submit" class="btn btn-primary">Salva</button>
                </form>
            </div>
        </div>
    </div>
</section>